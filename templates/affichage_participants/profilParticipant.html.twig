{% extends 'base.html.twig' %}

{% block title %}Hello AffichageParticipantsController!{% endblock %}

{% block main %}
    <link rel="stylesheet" href="{{ asset('css/ProfilParticipant.css') }}">

    <div id="ProfilParticipant">
        <h1>Profil de {{participant.pseudo}} </h1>

        {# Affichage du participant #}
        {{form_start(participantForm)}}
        {{form_row(participantForm.nom)}}
        {{form_row(participantForm.prenom)}}
        {{form_row(participantForm.telephone)}}
        {{form_row(participantForm.email)}}
        {{form_row(participantForm.estRattache)}}
        {{form_end(participantForm)}}

        <a href="{{path('home')}}"> <button type="reset" class="btn btn-secondary" >Retour</button></a>
    </div>


{% endblock %}
