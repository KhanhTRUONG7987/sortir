                </tr>
            {% else %}
            {% endfor %}
            <tr>
                <td>
                    <label>
                        <input type="text" class="form-control" placeholder="Nom de campus" name="nom_new">
                    </label>
                </td>
                <td>
                    <a href="{{ path('campus_new') }}">Ajouter</a>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
